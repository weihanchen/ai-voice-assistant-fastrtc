OPENAI_API_KEY=your-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Voice Pipeline Settings
# STT (Speech-to-Text)
WHISPER_MODEL_SIZE=tiny
WHISPER_DEVICE=cpu
WHISPER_LANGUAGE=zh

# TTS (Text-to-Speech)
# 模型快取目錄（首次執行會自動從 HuggingFace 下載約 327MB）
# 預先下載: uv run python scripts/download_models.py
TTS_MODEL_PATH=models
# Available voices: zf_001~zf_085 (female), zm_010~zm_100 (male)
# Full list: https://huggingface.co/hexgrad/Kokoro-82M-v1.1-zh/tree/main/voices
TTS_VOICE=zf_001
TTS_SPEED=1.0

# VAD (Voice Activity Detection)
VAD_PAUSE_THRESHOLD_MS=500
VAD_MIN_SPEECH_DURATION_MS=250
VAD_SPEECH_THRESHOLD=0.5
VAD_MIN_SILENCE_DURATION_MS=500

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=7860
